-- init.lua Michael Lannert
-- lua functions for easier config
function map(mode, lhs, rhs, opts) 
	return vim.api.nvim_set_keymap(mode, lhs, rhs, opts) 
end

-- for setting vim options
function set(x) 
	return vim.cmd.set(x) 
end

-- for running vim commands
function c(cmd)
	return vim.cmd(cmd)
end

c("colorscheme murphy")

-- FOLDS
-- folding options
set("foldcolumn=4")

-- save folds for lua-files, and load view on edit
c("au BufWinLeave *.lua mkview")          
c("au BufWinEnter *.lua silent! loadview")

-- edit this init.lua
map("n","<leader>Ã¼", ":vsp ~\\AppData\\Local\\nvim\\init.lua<CR>", {}) -- speichern mit ,I
-- timeout for multiple keys, leaderkey

set("timeoutlen=350 ttimeoutlen=350") 

set("number") -- numbered lines
set("acd") -- auto chdir, changes pwd to directory of file in buffer
set("hls") -- highlighted search
